	#colors {
	#       background #20232c
	#}
	colors {
    	   background $base00
    	   separator  $base01
    	   statusline $base04
		   
           # State             Border  BG      Text
           focused_workspace   $base05 $base0D $base00
           active_workspace    $base05 $base03 $base00
           inactive_workspace  $base03 $base01 $base05
           urgent_workspace    $base08 $base08 $base00
           binding_mode        $base00 $base0A $base00
    }
	status_command /home/kermit/i3blocks-gaps/i3blocks/i3blocks
        #i3bar_command /home/kermit/i3gaps/i3-gaps/i3bar/i3bar
	position top
	tray_output none
	height 25
}

